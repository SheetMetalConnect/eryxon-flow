---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/Hero.astro';
import FeatureGrid from '@components/FeatureGrid.astro';
import HowItWorks from '@components/HowItWorks.astro';
import ComparisonTable from '@components/ComparisonTable.astro';
---

<Layout>
  <!-- Navigation -->
  <nav class="fixed top-4 z-50 nav-glass">
    <div class="w-full px-6 py-3">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg overflow-hidden flex items-center justify-center bg-accent">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2L2 7l10 5 10-5-10-5z"/>
              <path d="M2 17l10 5 10-5"/>
              <path d="M2 12l10 5 10-5"/>
            </svg>
          </div>
          <span class="text-xl font-bold text-foreground">Eryxon Flow</span>
        </div>

        <!-- Navigation links -->
        <div class="hidden md:flex items-center gap-8">
          <a href="#features" class="nav-link">Features</a>
          <a href="#how-it-works" class="nav-link">How It Works</a>
          <a href="#get-started" class="nav-link">Get Started</a>
          <a href="https://github.com/SheetMetalConnect/eryxon-flow" target="_blank" rel="noopener noreferrer" class="nav-link">GitHub</a>
        </div>

        <!-- Mobile menu button -->
        <button class="md:hidden nav-link p-2" id="mobile-menu-button" aria-label="Toggle mobile menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu dropdown -->
    <div class="md:hidden mobile-menu hidden fixed top-[80px] left-0 right-0 bottom-0 z-[9998]" id="mobile-menu">
      <div class="p-8 space-y-6 h-auto" style="background: rgba(0, 0, 0, 0.85);">
        <a href="#features" class="block nav-link text-center text-lg">Features</a>
        <a href="#how-it-works" class="block nav-link text-center text-lg">How It Works</a>
        <a href="#get-started" class="block nav-link text-center text-lg">Get Started</a>
        <a href="https://github.com/SheetMetalConnect/eryxon-flow" target="_blank" rel="noopener noreferrer" class="block nav-link text-center text-lg">GitHub</a>
      </div>
    </div>
  </nav>

  <!-- Main content -->
  <main>
    <!-- Hero Section -->
    <Hero />

    <!-- Features Section -->
    <div id="features">
      <FeatureGrid />
    </div>

    <!-- Comparison Section -->
    <div id="compare">
      <ComparisonTable />
    </div>

    <!-- How It Works Section -->
    <div id="how-it-works">
      <HowItWorks />
    </div>

    <!-- Get Started Section -->
    <section id="get-started" class="relative py-24 px-4 sm:px-6 lg:px-8 bg-zinc-900/50 border-t border-white/5">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl sm:text-5xl font-bold gradient-text mb-6">
          Get Started in Minutes
        </h2>
        <p class="text-xl text-muted-foreground mb-12 max-w-2xl mx-auto">
          Deploy Eryxon Flow with Docker or run locally. Full documentation available.
        </p>

        <!-- Terminal window -->
        <div class="terminal-window max-w-2xl mx-auto mb-12">
          <div class="terminal-header">
            <div class="terminal-button red"></div>
            <div class="terminal-button yellow"></div>
            <div class="terminal-button green"></div>
            <span class="terminal-title">Quick Start</span>
          </div>
          <div class="p-6 text-left">
            <pre class="font-mono text-sm text-foreground"><code><span class="text-muted-foreground"># Clone the repository</span>
git clone https://github.com/SheetMetalConnect/eryxon-flow.git
cd eryxon-flow

<span class="text-muted-foreground"># Install dependencies</span>
npm install

<span class="text-muted-foreground"># Configure environment</span>
cp .env.example .env

<span class="text-muted-foreground"># Start development server</span>
npm run dev</code></pre>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
          <a
            href="https://github.com/SheetMetalConnect/eryxon-flow"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-accent hover:bg-blue-600 text-white font-medium transition-all duration-200 hover:shadow-lg hover:shadow-accent/20"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
          <a
            href="https://github.com/SheetMetalConnect/eryxon-flow/blob/main/docs/QUICK_START.md"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border border-white/10 hover:border-white/20 hover:bg-white/5 text-foreground font-medium transition-all duration-200"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Documentation
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="relative py-16 px-4 sm:px-6 lg:px-8 bg-background border-t border-white/5">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- Brand -->
          <div class="md:col-span-2">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-8 h-8 rounded-lg overflow-hidden flex items-center justify-center bg-accent">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                  <path d="M2 17l10 5 10-5"/>
                  <path d="M2 12l10 5 10-5"/>
                </svg>
              </div>
              <span class="text-xl font-bold text-foreground">Eryxon Flow</span>
            </div>
            <p class="text-muted-foreground max-w-md mb-6">
              Open source Manufacturing Execution System for sheet metal fabrication.
              Built from hands-on experience with SMB metal shops.
              A starting point you can make your own.
            </p>
            <div class="flex items-center gap-4">
              <a
                href="https://github.com/SheetMetalConnect/eryxon-flow"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                <span class="text-sm">GitHub Repository</span>
              </a>
            </div>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-sm font-semibold text-foreground uppercase tracking-wider mb-4">Quick Links</h3>
            <div class="space-y-2">
              <a href="#features" class="block text-muted-foreground hover:text-foreground transition-colors text-sm">Features</a>
              <a href="#how-it-works" class="block text-muted-foreground hover:text-foreground transition-colors text-sm">How It Works</a>
              <a href="#get-started" class="block text-muted-foreground hover:text-foreground transition-colors text-sm">Get Started</a>
              <a href="https://github.com/SheetMetalConnect/eryxon-flow/blob/main/docs/HOW-THE-APP-WORKS.md" target="_blank" rel="noopener noreferrer" class="block text-muted-foreground hover:text-foreground transition-colors text-sm">Documentation</a>
            </div>
          </div>

          <!-- Community -->
          <div>
            <h3 class="text-sm font-semibold text-foreground uppercase tracking-wider mb-4">Community</h3>
            <div class="space-y-2">
              <a href="https://github.com/SheetMetalConnect/eryxon-flow/issues" target="_blank" rel="noopener noreferrer" class="block text-muted-foreground hover:text-foreground transition-colors text-sm">Issues & Support</a>
              <a href="https://github.com/SheetMetalConnect/eryxon-flow/discussions" target="_blank" rel="noopener noreferrer" class="block text-muted-foreground hover:text-foreground transition-colors text-sm">Discussions</a>
              <a href="https://github.com/SheetMetalConnect/eryxon-flow/blob/main/CONTRIBUTING.md" target="_blank" rel="noopener noreferrer" class="block text-muted-foreground hover:text-foreground transition-colors text-sm">Contributing</a>
              <a href="https://www.sheetmetalconnect.com/" target="_blank" rel="noopener noreferrer" class="block text-muted-foreground hover:text-foreground transition-colors text-sm">Sheet Metal Connect e.U.</a>
              <a href="https://vanenkhuizen.com" target="_blank" rel="noopener noreferrer" class="block text-muted-foreground hover:text-foreground transition-colors text-sm">Luke van Enkhuizen</a>
            </div>
          </div>
        </div>

        <!-- Bottom bar -->
        <div class="border-t border-border/50 mt-12 pt-8 flex flex-col sm:flex-row items-center justify-between gap-4">
          <p class="text-muted-foreground text-sm">
            2025 <a href="https://www.sheetmetalconnect.com/" target="_blank" rel="noopener noreferrer" class="hover:text-foreground transition-colors">Sheet Metal Connect e.U.</a> Released under the BSL 1.1.
          </p>
          <div class="flex items-center gap-4 text-sm text-muted-foreground">
            <span>Made by <a href="https://vanenkhuizen.com" target="_blank" rel="noopener noreferrer" class="hover:text-foreground transition-colors">Luke van Enkhuizen</a> from Europe</span>
          </div>
        </div>
      </div>
    </footer>
  </main>
</Layout>

<style>
  /* Floating dark glass navigation */
  .nav-glass {
    background: rgba(9, 9, 11, 0.7);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 9999px; /* Pill shape */
    box-shadow:
      0 4px 20px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    position: fixed;
    width: calc(100vw - 2rem);
    max-width: 900px; /* Smaller max-width for tighter nav */
    left: 50%;
    transform: translateX(-50%);
    transition: all 0.3s ease;
  }

  /* Navigation link styles */
  .nav-link {
    color: rgba(161, 161, 170, 1); /* muted-foreground */
    text-decoration: none;
    padding: 8px 16px;
    border-radius: 9999px;
    transition: all 0.2s ease;
    font-weight: 500;
    font-size: 0.95rem;
  }

  .nav-link:hover {
    color: #fafafa; /* foreground */
    background: rgba(255, 255, 255, 0.05);
  }

  /* Terminal styling */
  .terminal-window {
    background: #18181b; /* Zinc 900 */
    border: 1px solid #27272a; /* Zinc 800 */
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.4);
  }

  .terminal-header {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 16px;
    background: #27272a; /* Zinc 800 */
    border-bottom: 1px solid #3f3f46; /* Zinc 700 */
    border-radius: 12px 12px 0 0;
  }

  .terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .terminal-button.red { background: #ef4444; }
  .terminal-button.yellow { background: #f59e0b; }
  .terminal-button.green { background: #22c55e; }

  .terminal-title {
    margin-left: 8px;
    font-size: 13px;
    color: #a1a1aa;
    font-family: 'Inter', sans-serif;
  }

  /* Glass effect utility */
  .glass {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  /* Gradient text */
  .gradient-text {
    background: linear-gradient(135deg, #fff 0%, #a1a1aa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Prevent horizontal overflow */
  html, body {
    overflow-x: hidden;
    width: 100%;
  }

  /* Navigation improvements */
  nav {
    z-index: 9999;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 100px;
  }

  main {
    padding-top: 0;
  }

  /* Responsive improvements */
  @media (max-width: 768px) {
    .nav-glass {
      top: 16px;
      border-radius: 16px;
      width: calc(100vw - 2rem);
      max-width: none;
      padding: 0.5rem;
    }

    .mobile-menu {
      animation: slideDown 0.2s ease-out;
      background: rgba(9, 9, 11, 0.95) !important;
      backdrop-filter: blur(20px) !important;
      -webkit-backdrop-filter: blur(20px) !important;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }
  }

  /* Mobile menu animations */
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .mobile-menu.hidden {
    display: none;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        requestAnimationFrame(() => {
          mobileMenu.classList.toggle('hidden');
        });
      });

      // Close menu when clicking on links
      const menuLinks = mobileMenu.querySelectorAll('a');
      menuLinks.forEach(link => {
        link.addEventListener('click', function() {
          requestAnimationFrame(() => {
            mobileMenu.classList.add('hidden');
          });
        });
      });

      // Close menu when clicking outside
      document.addEventListener('click', function(event) {
        if (!mobileMenuButton.contains(event.target as Node) && !mobileMenu.contains(event.target as Node)) {
          requestAnimationFrame(() => {
            mobileMenu.classList.add('hidden');
          });
        }
      });
    }
  });
</script>
