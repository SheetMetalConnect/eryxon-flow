          <h4 class="font-medium text-white text-sm mb-1" data-i18n="comparison.features.api.title">REST API</h4>
          <p class="text-xs text-zinc-500" data-i18n="comparison.features.api.description">Integrate with anything</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .gradient-text {
    background: linear-gradient(135deg, #ffffff 0%, #a1a1aa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .fade-in-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .comparison-table {
    border-radius: 12px;
    overflow: hidden;
  }

  .table-row-hover {
    transition: background-color 0.15s ease;
  }

  .table-row-hover:hover {
    background-color: rgba(39, 39, 42, 0.3);
  }

  /* Table responsive */
  @media (max-width: 768px) {
    table {
      font-size: 0.75rem;
    }

    td, th {
      padding: 0.5rem 0.25rem;
    }

    .text-xs {
      font-size: 0.625rem;
    }

    .text-sm {
      font-size: 0.6875rem;
    }
  }
</style>
